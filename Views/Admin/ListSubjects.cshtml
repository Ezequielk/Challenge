@model List<Challenge.Models.ViewModels.ListSubjectViewModelAdmin>

@{
    ViewBag.Title = "List subjects";
}
<div class="float-right">
    @Html.ActionLink("New", "NewSubject", null, new { @class = "btn btn-success" })
</div>
<div class="table-responsive">
    <table class="table table-sm table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th class="col-xs-5" scope="col">Description</th>
                <th scope="col">Starting time</th>
                <th scope="col">Ending time</th>
                <th scope="col">Capacity</th>
                <th scope="col">ID Teacher</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subject in Model)
            {
                <tr>
                    <td>@subject.id_subject</td>
                    <td>@subject.name</td>
                    <td>@subject.description</td>
                    <td>@subject.time_from.ToString("hh':'mm")</td>
                    <td>@subject.time_to.ToString("hh':'mm")</td>
                    <td>@subject.capacity</td>
                    <td>@subject.id_teacher</td>
                    <td>
                        @Html.ActionLink("Edit", "EditSubject", new { id = subject.id_subject }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Delete", "DeleteSubject", new { id = subject.id_subject }, new { @class = "btn btn-danger", @onclick = "return confirm('Do you really want to delete it?');" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>